---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '../styles/mavie.css';
---

<!doctype html>
<html lang="pt_BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Encontre bolsas e acessórios exclusivos, elegantes e de alta qualidade. Perfeitos para complementar seu estilo e transformar seu visual no dia a dia!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/iconmark.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="input.css">
		<title>{title}</title>

		 <!-- Open Graph Meta Tags -->
		 <meta property="og:title" content="Bolsas e Acessórios - Mavie Acessórios" />
		 <meta property="og:description" content="Encontre bolsas e acessórios exclusivos, elegantes e de alta qualidade. Perfeitos para complementar seu estilo e transformar seu visual no dia a dia!" />
		 <meta property="og:image" content="https://raw.githubusercontent.com/S0stenes/mavie/refs/heads/main/public/og.png" />
		 <meta property="og:url" content="https://www.maviecolatina.com.br" />
		 <meta property="og:type" content="website" />
		 <meta property="og:locale" content="pt_BR" />
	 
		 <!-- Se quiser adicionar Twitter Cards (para Twitter) -->
		 <meta name="twitter:card" content="summary_large_image" />
		 <meta name="twitter:title" content="Bolsas e Acessórios - Mavie Acessórios" />
		 <meta name="twitter:description" content="Encontre bolsas e acessórios exclusivos, elegantes e de alta qualidade. Perfeitos para complementar seu estilo e transformar seu visual no dia a dia!" />
		 <meta name="twitter:image" content="https://raw.githubusercontent.com/S0stenes/mavie/refs/heads/main/public/og.png" />
		 <meta name="twitter:url" content="https://www.maviecolatina.com.br" />

		 		<script>
			// Mostrar o ano atual
			const ano = new Date().getFullYear();
			document.getElementById('ano').textContent = `${ano}`;

			// Verificar se o usuário já aceitou os cookies
			function checkCookie() {
				const cookiesAceitos = document.cookie.includes("cookiesAceitos=true");
				if (!cookiesAceitos) {
					document.getElementById('cookieBanner').style.display = 'block';
				}
			}

			// Aceitar cookies
			document.getElementById('aceitarCookies').addEventListener('click', function() {
				document.cookie = "cookiesAceitos=true; max-age=2592000; path=/"; // Expira em 30 dias
				document.getElementById('cookieBanner').style.display = 'none';
			});

			// Verificar cookies ao carregar a página
			window.onload = checkCookie;
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
